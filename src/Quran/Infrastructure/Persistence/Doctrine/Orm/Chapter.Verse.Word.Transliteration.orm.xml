<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

<entity name="App\Quran\Domain\Model\Chapter\Verse\Word\Transliteration" table="chapter_verse_word_transliteration">
    <id name="id" type="integer">
        <generator strategy="AUTO"/>
    </id>
    <field name="text" type="string" nullable="true"/>
    <many-to-one field="language" target-entity="App\Quran\Domain\Model\Language" >
        <join-column name="language_id" referenced-column-name="id" />
    </many-to-one>
    <many-to-one field="word" target-entity="App\Quran\Domain\Model\Chapter\Verse\Word" inversed-by="transliterations">
        <join-column name="word_id" referenced-column-name="id" />
    </many-to-one>
</entity>

</doctrine-mapping>
