<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

<entity name="App\Quran\Domain\Model\Chapter\Verse\Translation\Translator" table="chapter_verse_translation_translator">
    <id name="id" type="app_uuid" column="id" length="36"/>
    <field name="translatorNumber" type="smallint"/>
    <field name="name" type="string" length="60"/>
    <field name="authorName" type="string" length="60"/>
    <field name="slug" type="string" length="60" nullable="true"/>
    <many-to-one field="language" target-entity="App\Quran\Domain\Model\Language">
        <join-column name="language_id" referenced-column-name="id" />
    </many-to-one>
    <one-to-many field="translations" target-entity="App\Quran\Domain\Model\Chapter\Verse\Translation\Translator\Translation" mapped-by="translator">
        <cascade>
            <cascade-persist/>
        </cascade>
    </one-to-many>
</entity>
</doctrine-mapping>
