<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

<entity name="App\Quran\Domain\Model\Translation\TranslatedName" table="translation_translated_name">
    <id name="id" type="integer">
        <generator strategy="AUTO"/>
    </id>
    <field name="name" type="string" length="50"/>
    <field name="languageName" type="string" length="50"/>
    <many-to-one field="translation" target-entity="App\Quran\Domain\Model\Translation" inversed-by="translatedNames">
        <join-column name="translation_id" referenced-column-name="id" />
    </many-to-one>
</entity>

</doctrine-mapping>
