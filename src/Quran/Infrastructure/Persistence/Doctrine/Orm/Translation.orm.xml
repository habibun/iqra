<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

<entity name="App\Quran\Domain\Model\Translation" table="translation">
    <id name="id" type="integer">
        <generator strategy="AUTO"/>
    </id>
    <field name="name" type="string" length="60"/>
    <field name="authorName" type="string" length="60"/>
    <field name="slug" type="string" length="60" nullable="true"/>
    <field name="languageName" type="string" length="50"/>
    <one-to-many field="translatedNames" target-entity="App\Quran\Domain\Model\Translation\TranslatedName" mapped-by="translation"/>
</entity>

</doctrine-mapping>
