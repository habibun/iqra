<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

<entity name="App\Domain\Quran" table="quran">

    <id name="id" type="integer">
        <generator strategy="AUTO"/>
    </id>

    <many-to-one field="format" target-entity="App\Domain\Format">
        <join-column name="format_id" referenced-column-name="id" />
    </many-to-one>

    <many-to-one field="type" target-entity="App\Domain\Type">
        <join-column name="type_id" referenced-column-name="id" />
    </many-to-one>

    <many-to-one field="translation" target-entity="App\Domain\Translation">
        <join-column name="translation_id" referenced-column-name="id" />
    </many-to-one>

    <many-to-one field="recitation" target-entity="App\Domain\Recitation">
        <join-column name="recitation_id" referenced-column-name="id" />
    </many-to-one>

</entity>

</doctrine-mapping>
