{% extends '@shared/base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('homepage') }}
{% endblock %}

{% block content %}
    <div class="flex flex-row space-x-4">
        {# left sidebar #}
        <div class="basis-1/3">
            {{ 'Latest'|trans }}
        </div>

        {# main content #}
        <div class="basis-1/2">
            <div class="text-center bg-gray-50 text-gray-800 py-20 px-6">
                <h1 class="text-3xl font-bold mb-8">
                    <div id="homepage"></div>
                </h1>
            </div>

        </div>

        {# right sidebar #}
        <div class="basis-1/3">
            {{ 'Trending'|trans }}
        </div>
    </div>
{% endblock %}
