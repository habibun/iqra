<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">

    <!--Api-->
    <route id="api_quran_chapter_list" path="/chapters"
           controller="App\Quran\Presentation\Api\ChapterController::list"/>
    <route id="api_quran_chapter_verse_random" path="/chapters/verses/random"
           controller="App\Quran\Presentation\Api\ChapterController::randomVerse"/>
    <route id="api_quran_chapter_details" path="/chapters/{id}"
           controller="App\Quran\Presentation\Api\ChapterController::details"/>
</routes>
